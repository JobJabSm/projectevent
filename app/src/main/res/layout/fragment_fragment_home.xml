<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jnec.techfest.swayambhu.fragment_home"
    android:background="@drawable/backgroundfinal"
    android:id="@+id/homeFrame">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
     >

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:id="@+id/cardView_GENERAL"
        android:layout_marginTop="30dp"
        android:focusable="true"

        app:cardCornerRadius="20dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:contentPadding="5dp"
        app:cardPreventCornerOverlap="true"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:animationCache="false"
        android:layout_marginBottom="30dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_GENERAL"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/cardView"
            app:lottie_loop="true"
            android:layout_alignRight="@+id/cardView"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="servishero_loading.json" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textColor="#17202A"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="หัวข้ออบรม"
            android:textSize="20dp"
            android:textStyle="bold"
            ></TextView>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:id="@+id/cardView_FAQ"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="120dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:contentPadding="5dp"
        app:cardPreventCornerOverlap="true"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:animationCache="false">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_FAQ"
            android:layout_width="142dp"
            android:layout_height="99dp"
            android:layout_alignEnd="@+id/cardView"
            android:layout_alignRight="@+id/cardView"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="Faq.json"
            app:lottie_loop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/bg_screen4"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="FAQ"
            android:textSize="20dp"
            ></TextView>


    </android.support.v7.widget.CardView>



</LinearLayout>




    </ScrollView>


</FrameLayout>
